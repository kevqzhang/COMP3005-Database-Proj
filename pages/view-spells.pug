html 
    head
        title Spells
        style 
            include ../public/styles/navbar.css
            include ../public/styles/spells.css
    body 
        include navbar
        .content
            .characters 
                h1 Characters: 
                each char in characters
                    .character 
                        a(href="/characters/" + char.cid) #{char.name + " - Level " + char.charLvl + " " + char.subclass + " " + char.class}
            .spells 
                h1 Spells: 
                each spell in spells
                    .spell 
                        a(href="/spells/" + spell.spellName) #{spell.spellName + " - " + spell.spLvl}